<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/symbol_mark" />

    <!--상단 탭-->
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/goSchool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="등교" />

        <Button
            android:id="@+id/goHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하교" />
    </LinearLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true" />

    <View
        android:layout_below="@id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#c9c9c9"
        android:id="@+id/view" />

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view">

        <EditText
            android:id="@+id/locationSearch"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:hint="장소 검색"/>

        <Button
            android:id="@+id/mapSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/locationUpload"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/edittext_line"
            android:onClick="searchMapClick"
            android:text="지도 검색" />
    </LinearLayout>

    <View
        android:layout_below="@id/searchLayout"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#c9c9c9"
        android:id="@+id/view2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view2">

        <RelativeLayout
            android:id="@+id/searchHistoryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:id="@+id/mapview"
                android:layout_width="match_parent"
                android:layout_height="400dp">
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/keywordButtonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mapview"
                android:orientation="vertical"></LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>